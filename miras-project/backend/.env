# Ruta del fichero: /backend/.env

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./database.sqlite

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws

# Authentication (para futuras versiones)
JWT_SECRET=development_secret
API_KEY=development_key

# CasparCG Configuration
CASPAR_HOST=localhost
CASPAR_AMCP_PORT=5250
CASPAR_OSC_PORT=6250
CASPAR_MEDIA_PATH=/media
CASPAR_TEMPLATES_PATH=/templates

# Sistema de logging
LOG_FORMAT=dev
LOG_DIR=./logs

# Timeouts y Límites
CONNECTION_TIMEOUT=5000
COMMAND_TIMEOUT=2000
MAX_RECONNECT_ATTEMPTS=3
RECONNECT_INTERVAL=5000

# Configuración de desarrollo
ENABLE_MOCK_DEVICES=false
ENABLE_DEBUG_LOGGING=true
DISABLE_AUTHENTICATION=true