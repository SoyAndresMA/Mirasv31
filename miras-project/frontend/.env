// Ruta del fichero: /frontend/.env

# API URL
VITE_API_URL=http://localhost:3000/api

# WebSocket URL
VITE_WS_URL=ws://localhost:3000/ws

# Configuración del sistema
VITE_APP_NAME=MIRAS Production System
VITE_APP_VERSION=1.0.0
VITE_DEBUG_MODE=false

# Timeouts y reintentos
VITE_WS_RECONNECT_INTERVAL=5000
VITE_API_TIMEOUT=10000
VITE_MAX_RECONNECT_ATTEMPTS=5

# Configuración de dispositivos
VITE_DEFAULT_CASPAR_PORT=5250
VITE_DEFAULT_VMIX_PORT=8088
VITE_DEFAULT_ATEM_PORT=9990

# Características experimentales
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Configuración de autenticación
VITE_AUTH_ENABLED=true
VITE_AUTH_TOKEN_KEY=miras_auth_token